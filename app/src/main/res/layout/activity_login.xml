<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.LoginActivity">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="blahblah"
        android:textStyle="bold"
        android:textSize="40sp"
        android:textColor="@color/main_color"
        android:padding="16dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:fontFamily="@font/cookierunblack"/>

    <TextView
        android:id="@+id/tv_go"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="둘러보기 >"
        android:textColor="@color/main_color"
        android:layout_below="@id/tv_title"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_login_tv_go"
        android:paddingVertical="8dp"
        android:paddingHorizontal="16dp"
        android:clickable="true"/>

    <!-- 가장 아래쪽 뷰부터 배치하기 -->
    <TextView
        android:id="@+id/tv_signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="회원가입"
        android:layout_alignParentBottom="true"
        android:textColor="@color/main_color"
        android:gravity="center"
        android:background="@drawable/bg_round_rect"
        android:layout_marginBottom="40dp"
        android:layout_marginHorizontal="80dp"
        android:paddingVertical="8dp"
        android:clickable="true"/>

    <LinearLayout
        android:id="@+id/layout_login_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/tv_signup"
        android:layout_marginHorizontal="80dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/bg_round_rect"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingVertical="8dp">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginRight="8dp"
            android:src="@drawable/ic_baseline_email_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이메일로 로그인"
            android:textColor="@color/main_color" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_login_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_above="@id/layout_login_email"
        android:layout_marginBottom="16dp">

    <ImageView
        android:id="@+id/btn_login_kakao"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/btn_login_kakao"
        android:layout_marginHorizontal="16dp"
        android:clickable="true"/>

        <ImageView
            android:id="@+id/btn_login_google"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/btn_login_google"
            android:layout_marginHorizontal="16dp"
            android:clickable="true"/>

        <ImageView
            android:id="@+id/btn_login_naver"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/btn_login_naver"
            android:layout_marginHorizontal="16dp"
            android:clickable="true"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="간편하게 로그인하기"
        android:layout_above="@id/layout_login_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:textColor="@color/main_color"/>


</RelativeLayout>